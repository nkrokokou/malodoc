# Database
DATABASE_URL="postgresql://user:password@localhost:5432/malodoc?schema=public"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3001

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@malodoc.com

# SMS Configuration (Africa's Talking / Twilio)
SMS_PROVIDER=africas_talking
AFRICAS_TALKING_API_KEY=your_api_key
AFRICAS_TALKING_USERNAME=your_username
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Configuration
# Fedapay
FEDAPAY_API_KEY=your_fedapay_api_key
FEDAPAY_PUBLIC_KEY=your_fedapay_public_key
FEDAPAY_ENVIRONMENT=sandbox

# Kkiapay
KKIAPAY_PUBLIC_KEY=your_kkiapay_public_key
KKIAPAY_PRIVATE_KEY=your_kkiapay_private_key
KKIAPAY_SECRET=your_kkiapay_secret

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Cloudinary (optional for cloud storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Maps API (Mapbox or Google Maps)
MAPBOX_API_KEY=your_mapbox_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# System
DEFAULT_SOLIDARITY_PERCENTAGE=10
